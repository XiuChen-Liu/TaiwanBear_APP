<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".southActivity"
    android:background="@drawable/backgroud">

    <TextView
        android:id="@+id/TV05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="請選擇想要認識的城市"
        android:textSize="35dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:alpha="0.8"/>

    <Button
        android:id="@+id/BtnChiayi"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/TV05"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="80dp"
        android:text="嘉義"
        android:textSize="30dp"
        android:textStyle="bold"
        app:backgroundTint="#504A4A"
        android:onClick="actionPerformed"/>

    <Button
        android:id="@+id/BtnTainan"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/TV05"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/BtnChiayi"
        android:text="台南"
        android:textSize="30dp"
        android:textStyle="bold"
        app:backgroundTint="#504A4A"
        android:onClick="actionPerformed"/>

    <Button
        android:id="@+id/BtnKaohsiung"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/BtnChiayi"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="80dp"
        android:text="高雄"
        android:textSize="30dp"
        android:textStyle="bold"
        app:backgroundTint="#504A4A"
        android:onClick="actionPerformed"/>

    <Button
        android:id="@+id/BtnPingtung"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/BtnTainan"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/BtnKaohsiung"
        android:text="屏東"
        android:textSize="30dp"
        android:textStyle="bold"
        app:backgroundTint="#504A4A"
        android:onClick="actionPerformed"/>

    <ImageView
        android:id="@+id/markbear"
        android:layout_width="180dp"
        android:layout_height="162dp"
        android:layout_below="@+id/BtnPingtung"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="70dp"
        android:src="@drawable/sit" />

</RelativeLayout>