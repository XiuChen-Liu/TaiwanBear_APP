<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".startTestActivity">

    <TextView
        android:id="@+id/quesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:text="請問台北屬於什麼地形?"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#FFFFFF"
        android:alpha="0.8"
        android:textColor="#000000"
        />


        <Button
            android:id="@+id/rbtnA"
            android:layout_below="@+id/quesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:text="rbtnA"
            android:textSize="22sp"
            app:backgroundTint="#504A4A"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/rbtnB"
            android:layout_below="@+id/rbtnA"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rbtnB"
            android:textSize="22sp"
            app:backgroundTint="#504A4A"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/rbtnC"
            android:layout_below="@+id/rbtnB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rbtnC"
            android:textSize="22sp"
            app:backgroundTint="#504A4A"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/rbtnD"
            android:layout_below="@+id/rbtnC"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rbtnD"
            android:textSize="22sp"
            app:backgroundTint="#504A4A"
            android:textColor="@color/white"/>

</RelativeLayout>