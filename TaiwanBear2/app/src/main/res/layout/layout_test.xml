<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".testActivity">


    <TextView
        android:id="@+id/tvTestTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="各位勇者歡迎來到迷霧之森，\n相信你已經透過我們的寶庫認識台灣的各種地區，那你準備好接受挑戰了嗎?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:alpha="0.8"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReady"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Yes"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#504A4A"
        app:layout_constraintEnd_toEndOf="@+id/tvTestTitle"
        app:layout_constraintStart_toStartOf="@+id/tvTestTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTestTitle"
        android:textColor="@color/white"
        android:onClick="actionPerformed"/>
    x
    <Button
        android:id="@+id/btnNotReady"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="NO"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#504A4A"
        app:layout_constraintEnd_toEndOf="@+id/btnReady"
        app:layout_constraintStart_toStartOf="@+id/btnReady"
        app:layout_constraintTop_toBottomOf="@+id/btnReady"
        android:textColor="@color/white"
        android:onClick="actionPerformed"/>

    <ImageView
        android:id="@+id/markbear"
        android:layout_width="205dp"
        android:layout_height="188dp"
        android:layout_below="@+id/BtnYunlin"

        android:layout_marginTop="25dp"
        android:src="@drawable/ques"
        app:layout_constraintEnd_toEndOf="@+id/btnNotReady"
        app:layout_constraintStart_toStartOf="@+id/btnNotReady"
        app:layout_constraintTop_toBottomOf="@+id/btnNotReady" />



</androidx.constraintlayout.widget.ConstraintLayout>